{
  "private": true,
  "name": "@vuetify/loaders-root",
  "workspaces": [
    "dev",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages/*/src/**/* && tsc --noEmit",
    "lint:fix": "eslint packages/*/src/**/* --fix",
    "dev": "lerna run dev",
    "dev:unplugin-vuetify": "lerna run dev:unplugin-vuetify --stream --no-prefix",
    "dev:vite": "lerna run dev:vite --stream --no-prefix",
    "dev:webpack": "lerna run dev:webpack --stream --no-prefix",
    "build": "lerna run build",
    "publish": "lerna run build && lerna version --no-private && lerna publish from-git"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/loader-utils": "^2.0.6",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/compiler-sfc": "^3.5.13",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "lerna": "^3.22.1",
    "picocolors": "^1.0.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^6.2.4",
    "vue": "^3.5.13",
    "vue-loader": "^17.4.2",
    "vuetify": "^3.8.0",
    "webpack": "^5.89.0"
  }
}
